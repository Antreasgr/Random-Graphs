{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [{
            "taskName": "build c#",
            "command": "dotnet",
            "type": "shell",
            "group": "build",
            "args": ["build"],
            "options": {
                "cwd": "${workspaceRoot}/Csharp"
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "run c#",
            "command": "dotnet",
            "type": "shell",
            "group": "build",
            "args": ["run"],
            "options": {
                "cwd": "${workspaceRoot}/Csharp"
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "run Python",
            "command": "python",
            "type": "shell",
            "args": [
                "${file}"
            ],
            "group": "build",
            "options": {
                "env": {
                    "PYTHONIOENCODING": "UTF-8"
                }
            },
            "problemMatcher": [
                "$tsc"
            ]
        }
    ]
}